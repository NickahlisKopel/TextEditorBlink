{
  "name": "texteditor-blink",
  "version": "1.0.0",
  "description": "A simple text editor for story writing with dark mode and adjustable text size",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "package": "electron-packager . TextEditorBlink --platform=win32 --arch=x64 --out=dist --overwrite",
    "package:small": "electron-packager . TextEditorBlink --platform=win32 --arch=x64 --out=dist --overwrite --prune=true --ignore=node_modules/.cache"
  },
  "keywords": [
    "text-editor",
    "story-writing",
    "electron",
    "desktop-app"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.texteditor.blink",
    "productName": "TextEditor Blink",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "dir",
      "publisherName": "TextEditor Blink"
    },
    "mac": {
      "target": "dir"
    },
    "linux": {
      "target": "dir"
    }
  }
}
