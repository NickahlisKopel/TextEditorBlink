{
  "name": "texteditor-blink",
  "version": "1.0.0",
  "description": "A simple text editor for story writing with dark mode and adjustable text size",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "package": "electron-packager . TextEditorBlink --platform=win32 --arch=x64 --out=dist --overwrite",
    "package:small": "electron-packager . TextEditorBlink --platform=win32 --arch=x64 --out=dist --overwrite --prune=true --ignore=node_modules/.cache",
    "cap:init": "cap init texteditor-blink com.texteditor.blink",
    "cap:add:ios": "cap add ios",
    "cap:add:android": "cap add android",
    "cap:sync": "cap sync",
    "cap:copy": "cap copy",
    "cap:build": "cap copy && cap sync",
    "cap:open:ios": "cap open ios",
    "cap:open:android": "cap open android",
    "mobile:build": "cap copy && cap sync",
    "mobile:android": "cap copy && cap sync && cap open android",
    "mobile:ios": "cap copy && cap sync && cap open ios",
    "web:serve": "python -m http.server 8080 --directory mobile",
    "web:deploy:netlify": "netlify deploy --prod --dir=mobile",
    "web:deploy:vercel": "vercel --prod mobile",
    "web:deploy:firebase": "firebase deploy"
  },
  "keywords": [
    "text-editor",
    "story-writing",
    "electron",
    "desktop-app"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^24.6.4",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "@capacitor/android": "^6.2.1",
    "@capacitor/core": "^6.2.1",
    "@capacitor/ios": "^6.2.1",
    "astral-regex": "^2.0.0"
  },
  "build": {
    "appId": "com.texteditor.blink",
    "productName": "TextEditor Blink",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": "dir",
      "publisherName": "TextEditor Blink"
    },
    "mac": {
      "target": "dir"
    },
    "linux": {
      "target": "dir"
    }
  }
}
